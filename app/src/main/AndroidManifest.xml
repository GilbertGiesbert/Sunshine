<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sunshine.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".ForecastActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DetailActivity"
            android:label="@string/activity_details_title"
            android:parentActivityName=".ForecastActivity" >
            <!-- The meta-data element is needed for versions lower than 4.1=sdk16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ForecastActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/activity_settings_title"
            android:parentActivityName=".ForecastActivity" >
            <!-- The meta-data element is needed for versions lower than 4.1=sdk16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ForecastActivity" />
        </activity>

        <provider
            android:authorities="com.example.android.sunshine.app"
            android:name=".data.WeatherProvider" />

    </application>

</manifest>